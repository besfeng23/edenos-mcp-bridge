# Global
NODE_ENV=production
MCP_ENV_TAG=mcpmaster

# Web UI (Vite)
VITE_APP_NAME=EdenOS MCP Bridge
VITE_ALLOWED_ORIGINS=https://agile-anagram-469914-e2.web.app

# Firebase Hosting
FIREBASE_PROJECT=agile-anagram-469914-e2

# GCP
GCP_PROJECT_ID=agile-anagram-469914-e2
GCP_REGION=asia-southeast1
ARTIFACT_REPO=containers
CLOUD_RUN_SERVICE=edenos-mcp-bridge

# Secrets (store values only in Secret Manager; these are keys/refs)
SECRET__SERVICE_ACCOUNT_JSON=projects/${GCP_PROJECT_ID}/secrets/mcp-sa-json/versions/latest
SECRET__JWT_SIGNING_KEY=projects/${GCP_PROJECT_ID}/secrets/mcp-jwt-key/versions/latest

# Rate limiting
RATE_RPS=5
RATE_BURST=10

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.googleapis.com
OTEL_RESOURCE_SERVICE_NAME=edenos-mcp-bridge
