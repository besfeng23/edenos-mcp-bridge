# EdenOS MCP Bridge Environment Variables
# Copy this to .env and fill in your values

# GCP Configuration
GOOGLE_CLOUD_PROJECT=agile-anagram-469914-e2
GOOGLE_CLOUD_REGION=asia-southeast1

# EdenOS Environment
EDENOS_ENV=staging
EDENOS_PROJECT_ID=agile-anagram-469914-e2

# Firebase Configuration
FIREBASE_TOKEN=your_firebase_ci_token_here
HOSTING_SITE=edenos-app

# Authentication (Optional)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Action Relay (Optional)
ACTION_RELAY_URL=https://edenos-action-relay-xxx.a.run.app
ACTION_RELAY_TOKEN=your_bearer_token_here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Console Origin for CORS
MCP_CONSOLE_ORIGIN=https://mcpmaster-web-app.web.app

# Service Configuration
BRIDGE_SERVICE_NAME=edenos-mcp-bridge
BRIDGE_REGION=asia-southeast1

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=false

# Security
NODE_OPTIONS=--disable-network-agent
RATE_LIMIT_RPS=5
RATE_LIMIT_BURST=10
