{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "plugins/**", "web/**"],
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/server.ts"
    },
    {
      "src": "/health",
      "dest": "/src/server.ts"
    },
    {
      "src": "/metrics",
      "dest": "/src/server.ts"
    },
    {
      "src": "/tools",
      "dest": "/src/server.ts"
    },
    {
      "src": "/logs",
      "dest": "/src/server.ts"
    },
    {
      "src": "/fun/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/web/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/control-panel/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/wow-control/(.*)",
      "dest": "/src/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
