{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["web/**"],
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/tools",
      "dest": "/server.js"
    },
    {
      "src": "/logs",
      "dest": "/server.js"
    },
    {
      "src": "/web/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/control-panel/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/wow-control/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
