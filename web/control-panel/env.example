# EdenOS MCP Control Panel - Environment Variables
# Copy this file to .env.local and customize for your setup

# Default MCP endpoints (JSON array)
NEXT_PUBLIC_DEFAULT_ENDPOINTS='[{"name":"Local Bridge","url":"http://localhost:3000","auth":"","environment":"dev"}]'

# Default user scopes for RBAC (comma-separated)
NEXT_PUBLIC_DEFAULT_SCOPES='["deploy.run","bq.read","gcs.write"]'

# Demo mode (true/false)
NEXT_PUBLIC_DEMO_MODE=false

# Voice commands enabled by default (true/false)
NEXT_PUBLIC_VOICE_ENABLED=false

# Audit mode enabled by default (true/false)
NEXT_PUBLIC_AUDIT_ENABLED=false

# Polling interval in milliseconds (default: 5000)
NEXT_PUBLIC_POLLING_INTERVAL=5000

# Default environment filter (all/dev/staging/prod)
NEXT_PUBLIC_DEFAULT_ENVIRONMENT=all
